@{
    ViewBag.Title = "Usuarios";
}
@model List<MvcDatos1.Models.Home.Usuario>

<h2>Usuarios del sistema</h2>

<table border="1">
    <tr>
        <td>@Html.Label("Usuario")</td>
        <td>@Html.Label("Perfil")</td>
        <td>@Html.Label("Nombre")</td>
        <td>@Html.Label("Apellido")</td>
    </tr>
    @foreach (var usuario in Model)
    {
      <tr>
        <td><a href="../Home/Editar_usuario?usuario=@usuario.usuario">@usuario.usuario</a></td>
        <td>@usuario.perfil </td>
        <td>@usuario.nombre</td>
        <td>@usuario.apellido</td>
    </tr>
                
    }
    <tr><td><a href="../Home/Home"> Volver</a></td></tr>
</table>
